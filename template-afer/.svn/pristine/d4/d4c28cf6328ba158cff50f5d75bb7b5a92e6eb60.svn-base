@media print
{
  .noprint{
    display: none;
  }
}
@media print,screen {
 .fac > *:not(#tblTanques)
  {
    cursor: default;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    -webkit-print-color-adjust:exact;
    -moz-print-color-adjust:exact;
    -print-color-adjust:exact;
  }

  .recibo2 .precio
  {
    display: none;
  }
  html, body {
    width: 210mm;
    height: 150mm;
  }
  html.full_a4, body.full_a4 {
    height: 297mm;
  }

  body{
    position: relative;
    font-family : Arial, Helvetica, "Nimbus Sans L", "Liberation Sans", FreeSans, Sans-serif;
  }
i.fa
{
  margin-right: 5px;
}
 #cabecera h2 i.fa
 {
  color: #777;
 }
 #cabecera h2
 {
  font-size: 12px;
  margin: 5px;
