}
div.column
{
  float: left;
}
 div.clr
 {
  clear: both;
 }

 #datos_receptor h2, #condicion_venta h2
 {
  font-size:14px;
  font-weight: normal;
  padding: 1px 0;
 }
 #datos_receptor
 {
  padding: 5px 2px;
  border-bottom: 1px solid black;
 }
  #condicion_venta
 {
  text-align: center;
  padding: 5px 0;
  border-bottom: 1px solid black;
 }

 table
 {
  width: 100%;
font-size: 10px;
 }

 table thead tr, table tfoot tr, tr.bg-warning
 {
  background-color: #CCC;
 }

 tr.bg-warning
 {
  font-weight: bold;
 }


table tbody td{
  text-align: center;
   padding: 1.75px 0;
}
table+table
{
  margin-top: 2px;
}
 table thead td, table tfoot td,  table thead th
 {
  text-align: center;
  color: #000;
    padding: 5px 0;
 }

 td small
 {
  font-size: 10px;
  text-transform: uppercase;
  font-variant: small-caps;
 }
 .textLeft
 {
  text-align: left !important;
 }

 table tbody tr
 {
  border-bottom: 1px solid #ccc;
 }

 h1.codigo_barras
 {
  font-family: "i20f5";
  font-size: 50px;
 }

table#totales
{

}


div#totales_wrapper
{
    position:absolute;
    left:0;
    bottom:0;
    width:100%;
}
div#datos_cae, div#observaciones
{
  text-align: center;
  margin: 5px 0;
}

div#observaciones
{
  padding: 5px 0;
  background-color: #CCC;
  color: #000;
  margin-bottom: 0 !important;
}
div#datos_cae
{
    font-size: 12px;
  font-weight: normal;
}
div#datos_cae h2
{
