 }
 #cabecera h1
 {
  font-size: 25px;
  font-weight: bold;
  text-align: center;
  margin: 10px 0;
 }
#alerta-varillaje
{
  background: #C00;
  text-align: center;
  color:#FFF;
  padding: 3px 0;
  font-weight: bold;
}
#cabecera #datos_comprobante h2
{
  text-align: center;
}
#cabecera #letra_comprobante
{
    font-size: 50px;
  color: #000;
  width: 6%;
}
 #cabecera #codigo_comprobante
 {
